<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    card_view:cardElevation="@dimen/margin_small">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_anatomy"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/margin_large_n"
            />

        <TextView
            android:id="@+id/tv_anatomy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_anatomy"
            android:text="Vaganititis"
            android:textColor="@color/primary_text"
            android:layout_alignTop="@id/iv_anatomy"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>